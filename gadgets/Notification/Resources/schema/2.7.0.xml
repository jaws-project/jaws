<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name><variable>database</variable></name>

    <table>
        <name><variable>table_prefix</variable>notification_message</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
            </field>

            <field>
                <name>hash</name>
                <type>integer</type>
                <length>8</length>
            </field>

            <field>
                <name>shouter</name>
                <description>almost gadget name</description>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>name</name>
                <description>notification type name</description>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>title</name>
                <type>text</type>
                <length>255</length>
            </field>

            <field>
                <name>summary</name>
                <type>text</type>
            </field>

            <field>
                <name>verbose</name>
                <type>text</type>
            </field>

            <field>
                <name>variables</name>
                <type>text</type>
            </field>

            <field>
                <name>callback</name>
                <description>callback url</description>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>image</name>
                <description>image url of message</description>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>time</name>
                <type>integer</type>
                <length>8</length>
                <default>0</default>
            </field>

            <index>
                <name><variable>table_prefix</variable>notification_hash</name>
                <field>
                    <name>hash</name>
                </field>
            </index>

            <index>
                <name><variable>table_prefix</variable>notification_time</name>
                <field>
                    <name>time</name>
                </field>
            </index>

        </declaration>
    </table>

    <table>
        <name><variable>table_prefix</variable>notification_recipient</name>
        <declaration>

            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
            </field>

            <field>
                <name>driver</name>
                <type>integer</type>
                <length>2</length>
                <notnull>true</notnull>
            </field>

            <field>
                <name>message</name>
                <type>integer</type>
                <default>0</default>
            </field>

            <field>
                <name>contact</name>
                <type>text</type>
            </field>

            <field>
                <name>hash</name>
                <type>integer</type>
                <length>8</length>
            </field>

            <field>
                <name>attempts</name>
                <type>integer</type>
                <length>8</length>
                <default>0</default>
            </field>

            <field>
                <name>time</name>
                <type>integer</type>
                <length>8</length>
                <default>0</default>
            </field>

            <field>
                <name>status</name>
                <type>integer</type>
                <length>2</length>
                <default>1</default>
            </field>

            <index>
                <name><variable>table_prefix</variable>notification_r_drv</name>
                <field>
                    <name>driver</name>
                </field>
            </index>

            <index>
                <name><variable>table_prefix</variable>notification_r_msg</name>
                <field>
                    <name>message</name>
                </field>
            </index>

            <index>
                <name><variable>table_prefix</variable>notification_r_ts</name>
                <field>
                    <name>time</name>
                </field>

                <field>
                    <name>status</name>
                </field>
            </index>

            <index>
                <name><variable>table_prefix</variable>notification_r_mh</name>
                <unique>true</unique>

                <field>
                    <name>message</name>
                </field>
                <field>
                    <name>hash</name>
                </field>
            </index>


        </declaration>
    </table>

    <table>
        <name><variable>table_prefix</variable>notification_driver</name>
        <declaration>

            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
            </field>

            <field>
                <name>name</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>45</length>
            </field>

            <field>
                <name>title</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>64</length>
            </field>

            <field>
                <name>enabled</name>
                <type>boolean</type>
                <default>true</default>
            </field>

            <field>
                <name>options</name>
                <type>text</type>
            </field>

        </declaration>
    </table>


</database>