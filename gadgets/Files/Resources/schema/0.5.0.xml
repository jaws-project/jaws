                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
            </field>

            <field>
                <name>gadget</name>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>action</name>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>reference</name>
                <type>integer</type>
                <length>8</length>
                <default>0</default>
            </field>

            <field>
                <name>type</name>
                <type>integer</type>
                <length>2</length>
                <default>0</default>
            </field>

            <field>
                <name>title</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>description</name>
                <type>text</type>
            </field>

            <field>
                <name>folderized</name>
                <type>boolean</type>
                <default>false</default>
            </field>

            <field>
                <name>postname</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>filename</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>filesize</name>
                <type>integer</type>
                <length>8</length>
            </field>

            <field>
                <name>mimetype</name>
                <type>text</type>
                <length>128</length>
            </field>

            <field>
                <name>filetype</name>
                <type>integer</type>
                <unsigned>true</unsigned>
                <length>1</length>
                <description>1:text 2:image 3:audio 4:video 5:archive 254:folder 255:unknown</description>
            </field>

            <field>
                <name>filetime</name>
                <type>integer</type>
                <length>8</length>
            </field>

            <field>
                <name>filehits</name>
                <type>integer</type>
                <length>8</length>
                <default>0</default>
            </field>

            <field>
                <name>filekey</name>
                <type>text</type>
                <length>32</length>
            </field>

            <field>
                <name>user</name>
                <type>integer</type>
                <length>8</length>
                <default>0</default>
            </field>

            <field>
                <name>public</name>
                <type>boolean</type>
                <default>true</default>
            </field>

            <index>
                <name><variable>table_prefix</variable>files_gar</name>
                <field>
                    <name>gadget</name>
                </field>

                <field>
                    <name>action</name>
                </field>

                <field>
                    <name>reference</name>
                </field>
            </index>

            <index>
                <name><variable>table_prefix</variable>files_user</name>
