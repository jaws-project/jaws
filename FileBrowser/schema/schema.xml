<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

 <name><variable>database</variable></name>

 <table>
    <name><variable>table_prefix</variable>filebrowser</name>
    <declaration>

        <field>
            <name>id</name>
            <type>integer</type>
            <notnull>true</notnull>
            <autoincrement>true</autoincrement>
        </field>

        <field>
            <name>path</name>
            <type>text</type>
            <length>128</length>
            <notnull>true</notnull>
        </field>

        <field>
            <name>filename</name>
            <type>text</type>
            <length>128</length>
            <notnull>true</notnull>
        </field>

        <field>
            <name>title</name>
            <type>text</type>
            <length>128</length>
        </field>

        <field>
            <name>description</name>
            <type>text</type>
        </field>

        <field>
            <name>fast_url</name>
            <type>text</type>
            <length>90</length>
        </field>

        <field>
            <name>hits</name>
            <type>integer</type>
            <default>0</default>
        </field>

        <field>
            <name>createtime</name>
            <type>timestamp</type>
        </field>

        <field>
            <name>updatetime</name>
            <type>timestamp</type>
        </field>

        <index>
            <name><variable>table_prefix</variable>filebrowser_path</name>
            <unique>true</unique>
            <field>
                <name>path</name>
            </field>
            <field>
                <name>filename</name>
            </field>
        </index>

        <index>
            <name><variable>table_prefix</variable>filebrowser_fu</name>
            <field>
                <name>fast_url</name>
            </field>
        </index>

    </declaration>
 </table>

</database>
